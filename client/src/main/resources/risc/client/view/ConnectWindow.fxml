<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="connectPane" prefHeight="397.0" prefWidth="600.0" style="-fx-background-color: #34495e#34495e;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane layoutY="119.0" prefHeight="279.0" prefWidth="603.0"
                    style="-fx-background-color: #2980b9#2980b9; -fx-rotate: 180; -fx-background-radius: 0 0 18 18;"/>
        <Label layoutX="79.0" layoutY="144.0" text="Server IP/Hostname:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label layoutX="137.0" layoutY="201.0" text="Port Number:">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <JFXTextField fx:id="hostnameField" focusColor="WHITE" layoutX="246.0" layoutY="142.0" prefHeight="26.0"
                      prefWidth="287.0" promptText="IP"
                      style="-fx-background-color: #34495e#34495e; -fx-text-inner-color: white; -fx-prompt-text-fill: white" unFocusColor="WHITE"/>
        <JFXTextField fx:id="portField" focusColor="WHITE" layoutX="246.0" layoutY="199.0" prefHeight="26.0"
                      prefWidth="287.0" promptText="Port Number"
                      style="-fx-background-color: #34495e#34495e; -fx-text-inner-color: white; -fx-prompt-text-fill: white" unFocusColor="WHITE"/>
        <JFXButton fx:id="startButton" buttonType="RAISED" layoutX="186.0" layoutY="274.0" mnemonicParsing="false"
                   onAction="#startButtonAction" prefHeight="59.0" prefWidth="121.0"
                   style="-fx-background-color: #2980b9#2980b9;" text="Start"/>
        <JFXButton fx:id="optionButton" buttonType="RAISED" layoutX="329.0" layoutY="274.0" mnemonicParsing="false"
                   onAction="#optionButtonAction" prefHeight="59.0" prefWidth="121.0"
                   style="-fx-background-color: #2980b9#2980b9;" text="Option"/>
        <ImageView fitHeight="98.0" fitWidth="492.0" layoutX="104.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true" style="-fx-opacity: 1;">
            <image>
                <Image url="@assets/gameTitle.png"/>
            </image>
        </ImageView>
        <Label fx:id="errorLabel" layoutX="192.0" layoutY="345.0" prefHeight="37.0" prefWidth="406.0"
               textAlignment="CENTER"/>
    </children>
</AnchorPane>
